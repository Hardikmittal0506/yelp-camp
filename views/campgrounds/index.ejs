<% include ../partials/header %> 

<div class = "container">
    <header class="jumbotron">
        <div class = "container">
            <h1>Welcome To YelpCamp!</h1>    
            <p>View our Handpicked Campgrounds from all over the World</p>
            <p>
                <a class = "btn btn-primary btn-lg" href = "/campgrounds/new">Add New Campground</a>    
            </p>
        </div>
    </header>
    <div class="row text-center" style = "display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach((campground) =>{ %>
        <div class = "col-md-3 col-sm-6">
            <div class = "thumbnail">
                <a href = "<%= campground.image %>"><img src="<%= campground.image %>"></a>   
                <div class = "caption">
                    <a href ="/campgrounds/<%= campground._id %>"><h4><%= campground.name %></h4></a>
                </div>
            </div>
        </div>
        <% }); %>
    </div>

</div>



<% include ../partials/footer %> 